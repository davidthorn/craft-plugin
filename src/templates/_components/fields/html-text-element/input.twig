{% import "_includes/forms" as forms %}
{{ dump(value) }}

<div class="matrix matrix-field">
    <div class="blocks">
        <div class="matrixblock">
            <div class="fields">
                <div class="field">
                    <div class="heading">
                        <label id="aasdasd" for="aasdasd">Element Type</label>
                    </div>
                    <div class="input ltr">
                        <div class="select">
                            {{ forms.selectField({
                                id: elements.type.id,
                                name: elements.type.name,
                                value: elements.type.value,
                                class: 'my-select',
                                options: [
                                    { label: 'H1', value: 'h1' },
                                    { label: 'H2', value: 'h2' }
                                ]
                            }) }}
                        </div>

                    </div>
                </div>

                <div class="field">
                    <div class="heading">
                        <label id="" for="">Text Value</label>
                    </div>
                    {{ forms.text({
                        required: true,
                        id: elements.textValue.id,
                        name: elements.textValue.name,
                        value: elements.textValue.value,
                        class: 'other-class',
                        placeholder: 'other placeholder'
                    }) }}
                </div>

                <div class="field">
                    <div class="heading">
                        <label id="" for="">Class List</label>
                    </div>
                    {{ forms.text({
                        id: elements.classList.id,
                        name: elements.classList.name,
                        value: elements.classList.value,
                        class: 'other-class',
                        placeholder: 'other placeholder'
                    }) }}
                </div>

                <div class="field">
                    <div class="heading">
                        <label id="" for="">Element ID</label>
                    </div>
                    {{ forms.text({
                        id: elements.elementID.id,
                        name: elements.elementID.name,
                        value: elements.elementID.value,
                        class: 'other-class',
                        placeholder: 'other placeholder'
                    }) }}
                </div>

                <div class="field">
                    <div class="heading">
                        <label id="" for="">Element Name</label>
                    </div>
                    {{ forms.text({
                        id: elements.elementName.id,
                        name: elements.elementName.name,
                        value: elements.elementName.value,
                        class: 'other-name',
                        placeholder: 'other placeholder'
                    }) }}
                </div>
            </div>
            </div>


    </div>


</div>
